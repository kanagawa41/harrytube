<% if @recommend_post.present? %>
<div class="card mb-4">
  <h5 class="card-header">オススメ</h5>
  <div class="card-body">

    <% @recommend_post.each do |post| %>

    <a href="<%= post_path(post.id) %>">
      <div class="row">
        <div class="col-md-5">
          <a href="#">
            <img class="img-fluid rounded mb-3 mb-md-0" src="<%= "http://i.ytimg.com/vi/#{post.youtube_video_id}/sddefault.jpg" %>" alt="<%= post.title %>">
          </a>
        </div>
        <div class="col-md-7">
          <h6><%= cut_str post.title, 25 %></h6>
        </div>
      </div>
    </a>

    <hr class="margin-01">

    <% end %>

  </div>
</div>

<% end %>

