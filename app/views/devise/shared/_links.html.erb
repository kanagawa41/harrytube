<%- if controller_name != 'sessions' %>
  <%= link_to t('views.devise.links.login_btn'), new_session_path(resource_name), class: "btn btn-outline-link" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('views.devise.links.sighup_btn'), new_registration_path(resource_name), class: "btn btn-outline-link" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('views.devise.links.new_password'), new_password_path(resource_name), class: "btn btn-outline-link" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('views.devise.links.new_confirmation'), new_confirmation_path(resource_name), class: "btn btn-outline-link" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('views.devise.links.new_unlock'), new_unlock_path(resource_name), class: "btn btn-outline-link" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
<!-- FIXME: TwitterかFacebookでログインをできるようにする -->
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t('views.devise.links.omniauth_authorize', provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), class: "btn btn-outline-link" %><br />
  <% end -%>
<% end -%>
